{
  "AllowedHosts": "*",
  "DAL": {
    "DropDatabaseOnStartup": false,
    "MigrateDatabaseOnStartup": false,
    "Provider": "SqlServer",
    "InMemory": {
      "DatabaseName": "",
      "AssemblyName": "CG.Blue.Data.InMemory"
    },
    "SqlServer": {
      "ConnectionString": "",
      "AssemblyName": "CG.Blue.Data.SqlServer"
    },
    "Sqlite": {
      "ConnectionString": "",
      "AssemblyName": "CG.Blue.Data.Sqlite"
    }
  },
  "BLL": {
    "SharedPassword": "",
    "SharedSalt": "",
    "BlobStorage": {
      "RootPath": "",
      "EncryptAtRest": false,
      "FolderLevels" :  "Single"
    }
  },
  "SVC": {

  },
  "CTRL": {

  },
  "Seeding": {
    "SeedOnStartup": false,
    "Force": false,
    "FileNames": [
      "Seeding/fileTypes.json"
    ]
  },
  "Identity": {
    "DeveloperBypass": true
  },
  "Plugins": {
    "Modules": [  ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.AspNetCore": "Error"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "\\Logging\\CG.Blue.Host\\log.log",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 7,
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
